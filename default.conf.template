server {
    listen       80;
    server_name  localhost;

    #charset koi8-r;
    #access_log  /var/log/nginx/host.access.log  main;
    root   /usr/share/nginx/html;

    location / {
        try_files $uri $uri/ ${MEETINGS_LOCATION}/$request_uri =404;
    }

    location ${MEETINGS_LOCATION} {
        autoindex on;
    }
}
